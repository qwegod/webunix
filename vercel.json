{
    "version": 2,
    "builds": [
      {
        "src": "server/dist/index.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["dist/**"] }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server/dist/index.js"
      }
    ],
    "buildCommand": "npm install --prefix server && npm install --prefix client && npm run build --prefix client"
  }